import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Scanner;
import java.util.Set;
import java.util.Vector;

public class Rank {
	private static Vector<String> nameRank = null;
	private static Vector<Integer> scoreRank = null;
	
	public Vector<String> getNameRank() {
		if(nameRank == null) {
			openRank();
		}
		return nameRank;
	}
	
	public Vector<Integer> getScoreRank() {
		if(scoreRank == null) {
			openRank();
		}
		return scoreRank;
	}
	
	public void openRank() {
		nameRank = new Vector<String>();
		scoreRank = new Vector<Integer>();
		
		HashMap<String, Integer> hash = new HashMap<String, Integer>();
		
		try {
			Scanner sc = new Scanner(new FileReader("ranking.txt"));
			while(sc.hasNext()) {
				String name = sc.nextLine();
				String score = sc.nextLine();
				
				int s = Integer.parseInt(score);
				
				hash.put(name, s);
			}
		} catch (FileNotFoundException e1) {
			System.out.println("파일을 열 수 없습니다.");
			System.exit(0);
		} catch (IOException e1) {
			System.out.println("입출력 오류");
			System.exit(0);
		}
		
		int hashSize = hash.size(); //파일에서 저장한 데이터 크기
		
		for(int i=0; i<hashSize; i++) {
			int max = 0;
			String maxName;
			
			Set<String> keys = hash.keySet();
			Iterator<String> it = keys.iterator();
			maxName = it.next();
			
			it = keys.iterator();
			
			while(it.hasNext()) {
				String key = it.next();
				if(max <= hash.get(key)) {
					max = hash.get(key);
					maxName = key;
				}
			}
			hash.remove(maxName);
			nameRank.add(maxName);
			scoreRank.add(max);
		}
		
		scoreRank.add(-1);
	}
}
